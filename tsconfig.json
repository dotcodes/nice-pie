{
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowJs": false,
    "baseUrl": "./",
    "paths": {
      "~*": ["./*"]
    },
    "pretty": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "noLib": false,
    "sourceMap": false,
    "lib": [
      "esnext.asynciterable",
      "es2015",
      "es2016",
      "dom",
      "es2017",
      "es6",
      "es5"
    ],
    "noUnusedLocals": false,
    "removeComments": true,
    "strict": false,
    "strictPropertyInitialization": false,
    "target": "es5",
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "test", "**/*.spec.ts"]
}
